<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonaranja"
    tools:context=".CrearIngresoDiario_act">

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="257dp"
        android:layout_height="116dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:gravity="center|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <ImageButton
                android:id="@+id/btn_guardar"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:background="@android:color/background_light"
                android:onClick="crearDiaDeTrabajo"
                app:srcCompat="@drawable/guardararchivo" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:onClick="editarDiaDeTrabajo"
                app:srcCompat="@drawable/editar" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="621dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="124dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="Guardar"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="124dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="Editar"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout4"
        android:layout_width="350dp"
        android:layout_height="387dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center_horizontal"
                android:text="Crear Día de Trabajo"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical"
                android:paddingBottom="20dp"
                android:text="Seleccione  Año"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical"
                android:paddingBottom="20dp"
                android:text="Seleccione Mes"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Ingrese Día"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spin3"
                android:layout_width="220dp"
                android:layout_height="43dp"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="156dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Inicio de Caja"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_dia1"
                android:layout_width="144dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Ingrese monto"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="310dp"
            android:layout_height="123dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="151dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Fin de Caja"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="345dp" />

            <EditText
                android:id="@+id/et_dia2"
                android:layout_width="147dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Ingrese monto"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Crear código identificador"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="345dp" />

            <EditText
                android:id="@+id/et_dia3"
                android:layout_width="169dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="Fecha ->Ej: 20201025"
                android:inputType="number" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="296dp"
        android:layout_height="158dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout4">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:text="Ingresos - Egresos - Observaciones"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dia4"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>